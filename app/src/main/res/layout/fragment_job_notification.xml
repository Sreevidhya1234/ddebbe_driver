<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_accept"

  >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@mipmap/white_btm_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeJob"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Minutes"
            android:id="@+id/txtTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15F Jhonston\nToronto"
            android:id="@+id/txtAddress"
            android:layout_below="@+id/txtTime"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reject ride"
            android:id="@+id/btnReject"
            android:layout_weight="5"
            android:background="@color/red"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Accept ride"
            android:id="@+id/btnAccept"
            android:layout_weight="5"
            android:background="@color/green"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />
    </LinearLayout>
</RelativeLayout>
