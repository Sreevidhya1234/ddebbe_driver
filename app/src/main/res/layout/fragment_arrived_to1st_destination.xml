<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.DDebbie.fragment.ArrivedToDestinationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/text_bg"
            android:layout_weight="7.7"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ARRIVED TO DESTINATION\n"
                android:id="@+id/txtAddress"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:maxLines="3"

                />
        </RelativeLayout>

<!--
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/map_red"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="2.3"
            android:id="@+id/imgMapRed"
            />-->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/navigation"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="2.3"
            android:id="@+id/imgNavigate"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/white_btm_bg"
        android:gravity="bottom">

        <com.DDebbie.view.SlideButton
            android:id="@+id/sliderStartTrip"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="false"
            android:max="100"
            android:progressDrawable="@android:color/transparent"
            android:thumb="@mipmap/slider_icon"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/slider_bg"
            android:thumbOffset="10px"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrived to first destination"
            android:id="@+id/txtSlide"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>


    </RelativeLayout>

</RelativeLayout>
